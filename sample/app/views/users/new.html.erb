<div class="container mt-auto">
    <div class="form-group">
        
        <div class="form_tag">
            
        <%= form_tag("/users/create") do %>
        
        <div class="row mt-5">
            <div class="col">
            <p>アカウント名</p>
            <input name="name" class="form-control">
            </div>
        </div>
        
        <div class="row mt-5">
            <div class="col">
            <p>メールアドレス</p>
            <input name="email" class="form-control">
            </div>
        </div>
        
        <div class="row mt-5">
            <div class="col">
            <p>パスワード</p>
            <input name="password" class="form-control">
            </div>
        </div>
        
        <div class="row mt-5">
            <div class="col">
            <input type = "submit" value ="新規登録" class="btn-square">  
            </div>
        </div>
        
        <% end %>
        
        </div>
        
    </div>
</div>